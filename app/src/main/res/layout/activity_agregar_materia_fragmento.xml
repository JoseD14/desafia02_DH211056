<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A187E">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textTituloPantalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Inscribir Materia"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre de la materia"
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/white"
            android:textColorHint="#BBBBBB"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text" />


        <EditText
            android:id="@+id/etCodigo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Codigo de la materia"
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/white"
            android:textColorHint="#BBBBBB"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etGrupo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Grupo"
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/white"
            android:textColorHint="#BBBBBB"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text"
            android:layout_marginTop="12dp"/>
        <Spinner
            android:id="@+id/spinnerDia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="12dp"
            android:spinnerMode="dropdown"/>
        <Spinner
            android:id="@+id/spinnerHora"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="12dp"
            android:spinnerMode="dropdown"/>

        <EditText
            android:id="@+id/etAula"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Aula "
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/white"
            android:textColorHint="#BBBBBB"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etDocente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Docente "
            android:background="@drawable/edittext_background"
            android:textColor="@android:color/white"
            android:textColorHint="#BBBBBB"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="12dp"/>



        <Button
            android:id="@+id/btnInscribirMateria"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="Guardar"
            android:backgroundTint="#3E3EAA"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
